<!DOCTYPE html>
<html>
<head>
	<title>GameScheduling</title>
	<%= csrf_meta_tags %>
	 <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

	<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
	<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<nav>
	<ul>
		<%  unless request.path_info == root_path  %>
		<li>
			<%= link_to "Home", root_path, class: "nav"  %>
		</li>
		<% end %>
		<% if logged_in? %>
		<li>
			<%= link_to "Hi, #{current_user.full_name}", user_path(current_user), class: "nav" %>
		</li>
		<li>
			<%= link_to "Available Games", games_path, class: "nav" %>
		</li>
		<li>
			<%= link_to "Host a Game", new_game_path, class: "nav" %>
		</li>
		<li>
			<%= link_to "Log out", session_path(current_user), method: :delete  %>
		</li>

		<% else %>
		<li>
			<%= link_to "Log in", new_session_path, class: "nav" %>
		</li>
		<li>
			<%= link_to "Sign up", new_user_path, class: "nav" %>
		</li>
		<% end %>
	</ul>

</nav>

<body>
	<br>
	<% flash.each do |key, value| %>
    	<div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>
    <%= flash[:notice] %>
	<%= yield %>
</body>
</html>
